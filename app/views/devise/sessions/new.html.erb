<div id="login-page" class="row more-padding">
    <div class="col s12 m4 l4 offset-l4 offset-m4 z-depth-4 card-panel">
        <div class="login-form card large main-card">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
                <div class="input-field col s12 center">
                  <%= image_tag 'red_logo.png', class: "responsive-img valign profile-image-login" %>
                  <p class="center login-form-text">Log in</p>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix">perm_identity</i>
                    <%= f.text_field :email, required: false %>
                    <%= f.label :email %>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock_outline</i>
                    <%= f.password_field :password, required: false %>
                    <%= f.label :password %>
                </div>
            </div>
            <div class="row">
                <div class="less-margin input-field col s12 m12 l12  login-text">
                    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    <%= f.label :remember_me %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <%= f.button :submit, "Log in", class: "red darken-2 sbtn waves-effect waves-light col s12" %>
                </div>
            </div>
            <div class="less-margin input-field col s6 m6 l6">
                <p class="margin alingn-left medium-small">
                  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Sign up", new_registration_path(resource_name) %>
                  <% end %>
                </p>
            </div>
            <div class="less-margin input-field col s6 m6 l6">
                <p class="margin right-align medium-small">
                  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot password?", new_password_path(resource_name) %>
                  <% end %>
                </p>
            </div>
            <% end %>
        </div>
    </div>
</div>